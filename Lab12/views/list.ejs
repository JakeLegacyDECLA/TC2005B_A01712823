<%- include('includes/_header.ejs') %>

<h2 class="title is-4">Personajes</h2>

<div class="columns is-multiline">
  <% if (personajes.length > 0) { %>
    <% for (let personaje of personajes) { %>
      <div class="column is-one-third">
        <div class="box">
          <p class="title is-5"><%= personaje.nombre %></p>
          <figure class="image">
            <img class="is-rounded" src="<%= personaje.imagen %>" alt="<%= personaje.nombre %>">
          </figure>
          <p class="mt-3"><%= personaje.descripcion %></p>
          <span class="tag is-info mt-2"><%= personaje.tipo %></span>
        </div>
      </div>
    <% } %>
  <% } else { %>
    <p>No hay personajes.</p>
  <% } %>
</div>

<%- include('includes/_footer.ejs') %>