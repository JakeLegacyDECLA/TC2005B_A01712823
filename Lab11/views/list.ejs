<%- include('includes/_header') %>

<a class="button is-primary" href="/personajes/new">Nuevo personaje</a>

<div class="columns is-multiline mt-4">

        <% if(personajes.length == 0) { %>
            <div class="column">
                No hay personajes registrados.
            </div>
        <% } else { %>


  <% for (let personaje of personajes) { %>
    <div class="column is-one-third">
      <div class="box">
        <p class="title is-5"><%= personaje.nombre %></p>

        <figure class="image">
          <img class="is-rounded" src="<%= personaje.imagen %>" alt="<%= personaje.nombre %>">
        </figure>

        <p class="mt-3"><%= personaje.descripcion %></p>
        <p class="tag is-info mt-2"><%= personaje.tipo %></p>
      </div>
    </div>
  <% } %>
</div>

<%- include('includes/_footer') %>